{
    "compilerOptions": {
        "target": "es2016",                                  
        "lib": ["ES6"],                                      
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        /* Modules */
        "module": "commonjs",
        "rootDir": "./src",
        /* Emit */
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
